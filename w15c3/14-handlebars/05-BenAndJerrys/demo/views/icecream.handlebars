<style media="screen">
  body {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 16px;
  }
  h1 {
    border-radius: 5px;
    color: #fff;
    background-color: #333;
    padding: 10px;
    margin-bottom: 5px;
  }
  h1.error {
    background: #C92228;
  }
  ul {
    padding: 0;
  }
  ul li {
    background: #efefef;
    border-radius: 5px;
    display: block;
    margin-bottom: 10px;
    padding: 10px;
    width: auto;
  }
</style>

{{#if icecream}}
  <h1>{{ icecream.name }}</h1>
  <ul>
    <li>Price: ${{ icecream.price }}</li>
    <li>Awesomeness: {{ icecream.awesomeness }}</li>
  </ul>
{{else}}
  <h1 class="error">No icecream could be found</h1>
{{/if}}
