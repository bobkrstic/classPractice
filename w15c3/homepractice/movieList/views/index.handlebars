

<h1>Movies To Watch</h1>

<ul>
	{{#each movies}}
		<li>
			<p>{{this.id}}. {{this.movie}}


			{{!-- HERE WE WILL ADD BUTTON DELETE --}}
			<form action="/delete?_method=DELETE" method="POST">
				<input type="hidden" name="id" value="{{this.id}}">
				<button type="submit">DELETE</button>
				{{!-- and back now to server.js to reference /delete route --}}
			</form>

			</p>
		</li>
	{{/each}}
</ul>
{{!-- after this go to server.js to create express route --}}
{{!-- that will post that information to the page --}}



